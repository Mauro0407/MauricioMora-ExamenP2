<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauricioMora_ExamenP2.Views.mmora_label1"
             Title="StackLayout">
    <StackLayout Padding="20">
        <Entry x:Name="NameEntry" Placeholder="Ingrese su nombre" />
        <Entry x:Name="PhoneEntry" Placeholder="Ingrese su número telefónico" Keyboard="Numeric" />
        <Button Text="Realizar Recarga" Clicked="OnRecargaClicked" />

        <Label Text="Última recarga:"
               FontAttributes="Bold" 
               Margin="10,20,10,5"/>
        <Label Text="{Binding UltimaRecarga}" FontSize="Medium" />
    </StackLayout>
</ContentPage>